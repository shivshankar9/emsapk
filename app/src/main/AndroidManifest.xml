<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission is required for Google Sign-In -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@drawable/app_logo"
    android:label="@string/app_name"
    android:roundIcon="@drawable/app_logo"
    android:supportsRtl="true"
    android:theme="@style/Theme.Ems1"
    tools:targetApi="31">

    <!-- LoginActivity remains the launcher activity -->
    <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Ems1">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- MainActivity is no longer the launcher activity -->
    <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Ems1" />

    <!-- AddEmployeeActivity remains unchanged -->
    <activity
            android:name=".AddEmployeeActivity"
            android:label="Add Employee"
            android:theme="@style/Theme.Ems1" />

    <!-- AddExpenseActivity remains unchanged -->
    <activity
            android:name=".AddExpenseActivity"
            android:label="Add Expense"
            android:theme="@style/Theme.Ems1" />

    <!-- HomeFragment is included in MainActivity, so no need to declare it separately -->

</application>

        </manifest>
