<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the solid color of the background -->
    <solid android:color="#FFFFFF" />

    <!-- Set the border color and width -->
    <stroke
            android:width="2dp"
            android:color="#DDDDDD" />

    <!-- Define the corner radius to make it rounded -->
    <corners android:radius="8dp" />

    <!-- Set padding inside the EditText -->
    <padding
            android:left="8dp"
            android:right="8dp"
            android:top="4dp"
            android:bottom="4dp" />
</shape>
