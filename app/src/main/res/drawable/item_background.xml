<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/white" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional border (stroke) -->
    <stroke
            android:width="2dp"
            android:color="@color/colorPrimary" />

    <!-- Optional shadow (requires elevation in layout) -->
    <padding
            android:left="8dp"
            android:right="8dp"
            android:top="8dp"
            android:bottom="8dp" />

</shape>
