<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Party Dropdown -->
        <LinearLayout
                android:id="@+id/partyDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/menu_item_background">

            <TextView
                    android:id="@+id/partyToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:text="Party"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

            <LinearLayout
                    android:id="@+id/partySubmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                <!-- Submenu will be dynamically loaded -->
            </LinearLayout>
        </LinearLayout>

        <!-- Sales Dropdown -->
        <LinearLayout
                android:id="@+id/salesDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/menu_item_background">

            <TextView
                    android:id="@+id/salesToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:text="Sales"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

            <LinearLayout
                    android:id="@+id/salesSubmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                <!-- Submenu will be dynamically loaded -->
            </LinearLayout>
        </LinearLayout>

        <!-- Items Dropdown -->
        <LinearLayout
                android:id="@+id/itemsDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/menu_item_background">

            <TextView
                    android:id="@+id/itemsToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="8dp"
                    android:padding="16dp"
                    android:text="Items"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true" />

            <LinearLayout
                    android:id="@+id/itemsSubmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                <!-- Submenu will be dynamically loaded -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
