<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText
                android:id="@+id/invoice_number_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Invoice Number" />

        <EditText
                android:id="@+id/customer_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Name" />

        <EditText
                android:id="@+id/customer_contact_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer Contact" />

        <EditText
                android:id="@+id/date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date (YYYY-MM-DD)" />

        <EditText
                android:id="@+id/notes_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes" />

        <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="?android:attr/dividerHorizontal" />

        <EditText
                android:id="@+id/item_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item Name" />

        <EditText
                android:id="@+id/quantity_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity"
                android:inputType="number" />

        <EditText
                android:id="@+id/unit_price_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Price"
                android:inputType="numberDecimal" />

        <Button
                android:id="@+id/add_item_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Item" />

        <!-- Correctly reference RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/items_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <Button
                android:id="@+id/save_invoice_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Invoice" />

    </LinearLayout>
</ScrollView>
