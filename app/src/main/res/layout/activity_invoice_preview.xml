<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InvoicePreviewActivity"
        android:padding="16dp">

    <!-- Top Heading (Invoice Details, for example) -->
    <TextView
            android:id="@+id/tvInvoiceHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Invoice Preview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Customer Details Section -->
    <LinearLayout
            android:id="@+id/customerDetailsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvInvoiceHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer: John Doe"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingBottom="4dp"/>

        <TextView
                android:id="@+id/tvCustomerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: 123 Street, City"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingBottom="4dp"/>

        <TextView
                android:id="@+id/tvInvoiceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2023-09-21"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingBottom="4dp"/>
    </LinearLayout>

    <!-- Divider Line -->
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/customerDetailsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    <!-- Invoice Items List (RecyclerView for the item list) -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInvoiceItems"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/customerDetailsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            tools:listitem="@layout/item_invoice_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>
