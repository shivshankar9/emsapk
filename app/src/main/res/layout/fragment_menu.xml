<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!-- Define any variables or import necessary classes here if needed -->
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

        <Button
                android:id="@+id/buttonAddEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Employee" />

        <Button
                android:id="@+id/buttonAddExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Expense" />

        <Button
                android:id="@+id/buttonAddInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Invoice" />

        <!-- Add new button to view invoices -->
        <Button
                android:id="@+id/buttonViewInvoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View All Invoices" />

    </LinearLayout>
</layout>
