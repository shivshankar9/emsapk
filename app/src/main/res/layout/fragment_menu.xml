<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:background="@android:color/background_light">

    <!-- Dropdown for Sales -->
    <Spinner
            android:id="@+id/spinnerSales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#673AB7"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

    <!-- Dropdown for Items -->
    <Spinner
            android:id="@+id/spinnerViewItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#673AB7"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

    <!-- Dropdown for Party -->
    <Spinner
            android:id="@+id/spinnerParty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7B4FCA"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

    <!-- Dropdown for Purchase -->
    <Spinner
            android:id="@+id/spinnerPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#673AB7"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

    <!-- Dropdown for Backup/Restore -->
    <Spinner
            android:id="@+id/spinnerBackupRestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#673AB7"
            android:layout_marginBottom="12dp"
            android:padding="16dp" />

    <!-- Add Employee (No Dropdown) -->
    <Button
            android:id="@+id/buttonAddEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Employee"
            android:textColor="@android:color/white"
            android:backgroundTint="#7B44DD"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />
</LinearLayout>
