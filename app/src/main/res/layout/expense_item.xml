<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

    <TextView
            android:id="@+id/text_view_expense_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Name"
            android:textSize="16sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/text_view_expense_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/text_view_expense_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/text_view_expense_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

        <Button
                android:id="@+id/button_edit_expense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit" />

        <Button
                android:id="@+id/button_delete_expense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete" />
    </LinearLayout>
</LinearLayout>
