<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#121212"
        android:gravity="center"
        tools:context=".MainActivity">

    <!-- Title text with AI feel -->
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Assistant"
            android:textSize="24sp"
            android:textColor="#00FFEE"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:shadowColor="#00FFEE"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"/>

    <!-- Glowing button -->
    <Button
            android:id="@+id/btnStart"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Start"
            android:textColor="#FFFFFF"
            android:background="@drawable/glowing_button"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp"/>

    <!-- CardView for futuristic text input -->
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#1F1F1F">

        <EditText
                android:id="@+id/etInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ask something..."
                android:textColorHint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:background="@null"
                android:fontFamily="sans-serif"
                android:textSize="16sp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>
