<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Greeting and User Profile -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

            <TextView
                    android:id="@+id/greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning!"
                    android:textColor="#A88ADC"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

            <ImageView
                    android:id="@+id/user_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/app_logo"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:layout_marginStart="8dp" />
        </LinearLayout>

        <TextView
                android:id="@+id/username_text"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Ask William AI"
                android:textColor="#B89BEC"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"/>

        <!-- Services Section -->
        <TextView
                android:id="@+id/services_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textColor="@color/background_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <!-- Services Buttons -->
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/service_button_background"
                        android:text="AI Chat"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"
                        android:paddingHorizontal="16dp"
                        android:textStyle="bold" />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/service_button_background"
                        android:text="BG Remover"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"
                        android:paddingHorizontal="16dp"
                        android:textStyle="bold" />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/service_button_background"
                        android:text="PDF Scanner"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"
                        android:paddingHorizontal="16dp"
                        android:textStyle="bold" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Automation Section -->
        <TextView
                android:id="@+id/automation_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automation"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

            <!-- Automation Cards -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/automation_card_background"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How workout ideal for my body shape."
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="6dp"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/button_background"
                        android:text="Generate"
                        android:textSize="10dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/automation_card_background"
                    android:padding="16dp"
                    android:gravity="center">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's food and beverages shopping."
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/button_background"
                        android:text="Generate"
                        android:textSize="9dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Recent Chats -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Chats"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Recent Chat Cards -->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_card_background"
                    android:text="Chatmins Hub: When ideas Spark and Conversations ignite"
                    android:textColor="@android:color/white"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_card_background"
                    android:text="TalkTech News: Where ideas Spark and Conversations ignite"
                    android:textColor="@android:color/white"
                    android:padding="16dp"
                    android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- New Chat Button (Fixed at bottom) -->
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="New Chat"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:paddingVertical="10dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:textStyle="bold" />

</RelativeLayout>
