<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- Buttons for switching between views -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            tools:ignore="ExtraText">

        <!-- Expense View Button -->
        <Button
                android:id="@+id/buttonExpenseView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Expense View"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white" />

        <!-- Employee View Button -->
        <Button
                android:id="@+id/buttonEmployeeView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Employee View"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/primary_text_dark" />
    </LinearLayout>

    <!-- Single Search Bar with default query hint -->
    <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Expenses"
            android:iconifiedByDefault="true" />

    <!-- RecyclerView for displaying Expenses -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewExpense"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <!-- RecyclerView for displaying Employees -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEmployee"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
</LinearLayout>
